
@{
    ViewBag.Title = "申购增加";
}

<style>
    .tablist {
        width: 100%;
        height: 30px;
        border-bottom: #ddd 1px solid;
        margin-bottom: 10px;
    }
    .btn-actor, .btn-rights{
        width: auto;
        height: 30px;
        padding: 0 10px;
        text-align: center;
        line-height: 30px;
        color: #fff;
        border: 1px solid transparent;
        border-radius: 3px;
        background: #ddd;

    }
    .btn-current {
        background: #70bc67;

    }
    .tabs table td,.tabs table th{
        padding: 0 10px !important;
        border: #ddd 1px solid !important;
    }
    .ListDate td {
        height: 30px;

    }
</style>

<!-- 内容版块 begin {-->
<div class="container">
    <!-- 编辑 begin {-->
    <div class="section">
        <div class="section-content4 consult-content">
            <div class="detail-title">申购信息增加</div>
            <ul class="info-box1 clearfix info-edit">
                <li class="typeOne-third">
                    <label>申购编号</label>
                    <input type="text" class="form-control">
                </li>
                <li class="typeOne-third">
                    <label>申购日期</label>
                    <input type="text" class="form-control">
                </li>
                <li class="typeOne-third">
                    <label>申购年月</label>
                    <input type="text" class="form-control">

                </li>
                <li class="typeOne-third">
                    <label>子公司名称</label>
                    <input type="text" class="form-control">
                </li>
                <li class="typeOne-third">
                    <label>系列号</label>
                    <input type="text" class="form-control">
                </li>
                <li class="typeOne-third">
                    <label>经手人</label>
                    <input type="text" class="form-control">
                </li>

            </ul>
            <!-- 表格切换-->
            <div class="tablist">
                <button type="button" class=" btn-actor btn-current">未申购订单信息</button>
                <button type="button" class=" btn-rights ">申购皮信息</button>
            </div>
            <div class="tabs">
                <table border="0" cellpadding="0" cellspacing="0" class="actors" >
                    <!-- 数据列表{-->
                    <tbody><tr>
                        <th>合同日期</th>
                        <th>系列号</th>
                        <th>子公司名称</th>
                        <th>公司名称</th>
                        <th>订货日期</th>
                        <th>合计数量</th>
                        <th>订单状态</th>
                        <th>订单号</th>
                    </tr>
                    <tr class="ListDate"><!-- 说明： 每页数据10条-->

                        <td>2016年01月</td>
                        <td>pwd110</td>
                        <td>TPSS</td>
                        <td>TPSS</td>
                        <td>2016-12-22</td>
                        <td>12:00</td>
                        <td>订单已经废弃</td>
                        <td>XXXXXX</td>
                    </tr>
                    <!--}数据列表 -->
                    </tbody>
                </table>
                <table border="0" cellpadding="0" cellspacing="0"  class="rights" style="display:none;">
                    <!-- 数据列表{-->
                    <tbody><tr>
                        <th>系列号</th>
                        <th>合同年月</th>
                        <th>子公司名称</th>
                        <th>名称</th>
                        <th>类型</th>
                        <th>颜色</th>
                        <th>计算残量</th>
                        <th>追加手配</th>
                        <th>采购数量合计</th>
                        <th>申购数量合计</th>
                        <th>利用率</th>
                    </tr>
                    <tr class="ListDate"><!-- 说明： 每页数据10条-->
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <!--}数据列表 -->
                    </tbody>
                </table>
            </div>
            <div class="btn-box">
                <button type="button" class="btn-default btn-cancel">取消</button>
                <button type="button" class="btn-default btn-sure">确定</button>
            </div>
        </div>
    </div>


</div>
<!--} 内容版块 end -->

<script>
    /*两个表格名称以及表格之间的切换*/
    $(".tablist>button").click(function() {
        $(this).addClass("btn-current").siblings().removeClass("btn-current");
        if ($(".btn-actor").hasClass("btn-current")) {
            $(".tabs").find("table:eq(0)").show().siblings().hide();


        } else {

            $(".tabs").find("table:eq(1)").show().siblings().hide();
        }
    });

</script>
